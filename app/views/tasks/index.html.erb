<h1 class = m-5> My tasks </h1>
  <div class="form-check m-5 mb-4">
      <% @tasks.each do |task| %>
        <div class= "p-2">
        <% if task.completed? %>
        <input class="form-check-input" type="checkbox" value="" id="flexCheckIndeterminate" checked>
        <% else %>
        <input class="form-check-input" type="checkbox" value="" id="flexCheckIndeterminate">
        <% end %>
        <label class="form-check-label" for="flexCheckIndeterminate">
        <%= link_to task.name, task_path(id: task.id) %>
        <%= link_to task_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Delete #{task.name} ?"} do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
        </label>
        </div>
      <% end %>
  </div>
<div class = "m-4">
  <p> <%= link_to "Create Task", new_task_path, :class => "btn btn-outline-primary" %> </p>
</div>
